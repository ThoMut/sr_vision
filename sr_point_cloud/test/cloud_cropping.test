<launch>
  <include file="$(find freenect_launch)/launch/freenect.launch"/>
    
  <!-- Loop a bag that looks enough like a OpenNI camera -->
  <node name="roi_box_bag" pkg="rosbag" type="play" args="-l $(find sr_point_cloud)/test/track_box.bag" />

  <node name="tracking" pkg="sr_object_tracking" type="tracking.py"  />
  <node name="cloud_publishing" pkg="sr_point_cloud" type="cloud_cropping.py"  />

  <test test-name="test_cloud_cropping" pkg="sr_point_cloud" type="test_cloud_cropping.py" />
</launch>
